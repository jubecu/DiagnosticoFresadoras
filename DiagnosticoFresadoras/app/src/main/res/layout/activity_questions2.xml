<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.diagnosticofresadoras.Questions2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvAlarmaTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text=""
            android:textColor="#00395D"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvQues2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="87dp"
            android:text="Si se rearma a mano, ¿se vuelve a saltar de nuevo al poco tiempo?"
            android:textSize="23sp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/bAns2A"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvQues2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="Comprobar consumo de bomba y/o cambiarla."
            android:textSize="18sp" />

        <Button
            android:id="@+id/bAns2B"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bAns2A"
            android:layout_alignStart="@+id/bAns2A"
            android:layout_below="@+id/bAns2A"
            android:layout_marginTop="28dp"
            android:text="Dejar bomba en observación."
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
